<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/view_note_checkImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            app:srcCompat="@drawable/baseline_radio_button_unchecked_black_18dp" />

        <TextView
            android:id="@+id/view_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Note"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/view_note_change_imageButton"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_create_black_18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/view_note_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detail"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/view_note_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>